{
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/target/**": true,
    "**/.git/**": true,
    "**/venv/**": true,
    "**/__pycache__/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/target": true,
    "**/venv": true,
    "**/__pycache__": true
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "python.analysis.autoImportCompletions": false,
  "python.analysis.indexing": false,
  "editor.hover.delay": 1000,
  "editor.quickSuggestions": {
    "other": "off",
    "comments": "off",
    "strings": "off"
  },
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "telemetry.telemetryLevel": "off",
  "workbench.enableExperiments": false,
  "window.openFoldersInNewWindow": "off",
  "window.openFilesInNewWindow": "off",
  "workbench.startupEditor": "none",
  "git.openRepositoryInParentFolders": "never",
  "git.autoRepositoryDetection": false,
  "github.gitAuthentication": false,
  "git.terminalAuthentication": false,
  "update.mode": "none"
  ,
  // Autoriser les tâches automatiques sans confirmation (appliqué au workspace)
  "task.allowAutomaticTasks": "on",
  // Éviter les popups de fermeture du terminal
  "terminal.integrated.confirmOnExit": "never"
  ,
  // Ouvrir les fichiers même en workspace non approuvé sans re-demander
  "security.workspace.trust.untrustedFiles": "open",
  // Ne pas demander confirmation à la fermeture de VS Code
  "window.confirmBeforeClose": "never"
  ,
  // Désactive les pagers dans le terminal intégré pour toutes les sessions
  "terminal.integrated.env.linux": {
    "GIT_PAGER": "cat",
    "PAGER": "cat",
    "LESS": "FRX",
    "GH_PAGER": "cat",
    "GH_NO_UPDATE_NOTIFIER": "1"
  },
  // Recommandations d'extensions pour la visualisation Markdown
  "extensions.recommended": [
    "yzhang.markdown-all-in-one",
    "DavidAnson.vscode-markdownlint",
    "bierner.markdown-mermaid",
    "streetsidesoftware.code-spell-checker",
    "jebbs.plantuml"
  ]
}