{
  // Tasks pour la documentation (r√©duisent les risques de blocage/pager)
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docs: Generate modules index",
      "type": "shell",
      "command": "bash -lc 'PYTHONUNBUFFERED=1 CI=1 GIT_PAGER=cat PAGER=cat LESS=FRX python3 scripts/generate_modules_docs_index.py && echo DONE'",
      "problemMatcher": []
    },
    {
      "label": "Docs: Build",
      "type": "shell",
      "command": "bash -lc 'PYTHONUNBUFFERED=1 CI=1 GIT_PAGER=cat PAGER=cat LESS=FRX KROKI_URL=https://kroki.io mkdocs build --strict --config-file mkdocs.yml && echo DONE'",
      "problemMatcher": []
    },
    {
      "label": "Docs: Serve (localhost:8000)",
      "type": "shell",
      "isBackground": true,
      "command": "bash -lc 'PYTHONUNBUFFERED=1 CI=1 GIT_PAGER=cat PAGER=cat LESS=FRX KROKI_URL=https://kroki.io mkdocs serve -a 127.0.0.1:8000 --config-file mkdocs.yml'",
      "problemMatcher": []
    },
    {
      "label": "Git: Status (no pager)",
      "type": "shell",
      "command": "bash -lc 'GIT_PAGER=cat PAGER=cat git --no-pager status'",
      "problemMatcher": []
    }
  ]
}
